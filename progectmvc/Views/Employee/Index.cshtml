@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table table-bordered table-hover">
    <tr> 
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th></th>


    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td> @item.Id</td>
            <td> @item.Name</td>
            <td> @item.Salary</td>
            <td> <img src="/images/@item.Image" width="80px" height="80px" > </td>
            <td> <a href="/Employee/Edit/@item.Id">Edit</a></td>
        </tr>
        
    }
</table>
